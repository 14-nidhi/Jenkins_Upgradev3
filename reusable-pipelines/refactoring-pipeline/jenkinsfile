pipeline {
    agent any
    environment {
        VERSION = "0.1.0"        
        RELEASE_VERSION = "R.2"
    }
    stages {
        stage('Audit tools') {                        
            steps {
                sh '''
                  git version
                  docker version
                  java -version
                  mvn -version
                '''
            }
        }
        stage('Unit Test') {
            steps {
              dir('./java-tomcat-sample') {
                sh '''
                    echo "Executing Unit Tests..."
                    mvn test
                '''
              }
            }
        }
        stage('Build') {
            steps {
              echo "Building version: ${VERSION} with suffix: ${VERSION_RC}"
              echo "Mention your Application Build Code here!!!"
              sh 'mvn -f java-tomcat-sample/pom.xml clean package'
            }
        }
    }
}